{
  "presets": [
    "react",
    "es2015",
    "stage-2"
  ],
  "plugins": ["babel-plugin-transform-decorators-legacy"],
  "env": {
    "development": {
      "plugins": [
        "transform-decorators-legacy",
        [
          "react-transform",
          {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              },
              {
                "transform": "react-transform-catch-errors",
                "imports": [
                  "react",
                  "redbox-react"
                ]
              }
            ]
          }
        ]
      ]
    }
  }
}
